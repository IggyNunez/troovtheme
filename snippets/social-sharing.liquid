<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing"> 
  {%- if share_headline -%}
  <h6>{{ share_headline }}</h6>
  {%- endif -%}
  <div class="d-flex justify-content-center align-items-center"> 
    {%- if settings.share_facebook -%}
    <div>
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="btn share-facebook" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
      {% render 'icon-facebook' %}
      <span class="share-title d-none" aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
      <span class="visually-hidden d-none">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
    </div>
    {%- endif -%}

    {%- if settings.share_twitter -%}
    <div>
    <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="btn share-twitter" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
      {% render 'icon-twitter' %}
      <span class="share-title d-none" aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
      <span class="visually-hidden d-none">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
     </div>
    {%- endif -%}

    {%- if settings.share_pinterest -%}
    <div>
    <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="btn share-pinterest" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
      {% render 'icon-pinterest' %}
      <span class="share-title d-none" aria-hidden="true">{{ 'general.social.share_on_pinterest' | t }}</span>
      <span class="visually-hidden d-none">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
    </div>
    {%- endif -%}
  </div>

</div>