<nav aria-label="pagination" class="mt-4">
  <ul class="pagination justify-content-center">
    <li class="page-item {% unless paginate.previous.is_link %}disabled{% endunless %}">
      <a class="page-link" href="{{ paginate.previous.url }}" tabindex="-1"><i class="fa fa-arrow-left"></i> {{ 'general.pagination.previous' | t }}</a>
    </li>
    <li class="page-item disabled"><a class="page-link" href="#">{{ 'general.pagination.current_page' | t: current: paginate.current_page, total: paginate.pages }}</a></li>
    <li class="page-item {% unless paginate.next.is_link %}disabled{% endunless %}">
      <a class="page-link" href="{{ paginate.next.url }}"><i class="fa fa-arrow-right"></i> {{ 'general.pagination.next' | t }}</a>
    </li>
  </ul>
</nav>