{% doc %}
  @prompt
    I want to build an image banner that looks like amazons a+ content
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-aplus-banner-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-aplus-banner__layout-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.grid_gap }}px;
    {% if block.settings.layout == 'single' %}
      grid-template-columns: 1fr;
    {% elsif block.settings.layout == 'two-column' %}
      grid-template-columns: repeat(2, 1fr);
    {% elsif block.settings.layout == 'three-column' %}
      grid-template-columns: repeat(3, 1fr);
    {% elsif block.settings.layout == 'hero-two' %}
      grid-template-columns: 2fr 1fr;
    {% elsif block.settings.layout == 'two-hero' %}
      grid-template-columns: 1fr 2fr;
    {% endif %}
  }

  .ai-aplus-banner__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    background-color: {{ block.settings.image_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-aplus-banner__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-aplus-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-aplus-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.image_bg_color }};
    position: relative;
  }

  .ai-aplus-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-aplus-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-aplus-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .ai-aplus-banner__content-{{ ai_gen_id }} {
    position: absolute;
    {% if block.settings.content_position == 'top-left' %}
      top: {{ block.settings.content_padding }}px;
      left: {{ block.settings.content_padding }}px;
      text-align: left;
    {% elsif block.settings.content_position == 'top-center' %}
      top: {{ block.settings.content_padding }}px;
      left: 50%;
      transform: translateX(-50%);
      text-align: center;
    {% elsif block.settings.content_position == 'top-right' %}
      top: {{ block.settings.content_padding }}px;
      right: {{ block.settings.content_padding }}px;
      text-align: right;
    {% elsif block.settings.content_position == 'center-left' %}
      top: 50%;
      left: {{ block.settings.content_padding }}px;
      transform: translateY(-50%);
      text-align: left;
    {% elsif block.settings.content_position == 'center' %}
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
    {% elsif block.settings.content_position == 'center-right' %}
      top: 50%;
      right: {{ block.settings.content_padding }}px;
      transform: translateY(-50%);
      text-align: right;
    {% elsif block.settings.content_position == 'bottom-left' %}
      bottom: {{ block.settings.content_padding }}px;
      left: {{ block.settings.content_padding }}px;
      text-align: left;
    {% elsif block.settings.content_position == 'bottom-center' %}
      bottom: {{ block.settings.content_padding }}px;
      left: 50%;
      transform: translateX(-50%);
      text-align: center;
    {% elsif block.settings.content_position == 'bottom-right' %}
      bottom: {{ block.settings.content_padding }}px;
      right: {{ block.settings.content_padding }}px;
      text-align: right;
    {% endif %}
    max-width: 90%;
    z-index: 2;
  }

  .ai-aplus-banner__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-aplus-banner__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  .ai-aplus-banner__button-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: {{ block.settings.text_spacing }}px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-aplus-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-aplus-banner__layout-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-aplus-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-aplus-banner__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-aplus-banner__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-aplus-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-aplus-banner__layout-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign heading_key = 'heading_' | append: i
        assign text_key = 'text_' | append: i
        assign button_text_key = 'button_text_' | append: i
        assign button_link_key = 'button_link_' | append: i
        assign show_item_key = 'show_item_' | append: i

        assign image = block.settings[image_key]
        assign heading = block.settings[heading_key]
        assign text = block.settings[text_key]
        assign button_text = block.settings[button_text_key]
        assign button_link = block.settings[button_link_key]
        assign show_item = block.settings[show_item_key]
      %}

      {% if show_item %}
        <div class="ai-aplus-banner__item-{{ ai_gen_id }}">
          <div class="ai-aplus-banner__image-wrapper-{{ ai_gen_id }}">
            {% if image %}
              <img
                src="{{ image | image_url: width: 1200 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
                class="ai-aplus-banner__image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-aplus-banner__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
                <div class="ai-aplus-banner__empty-state-{{ ai_gen_id }}">
                  Add image {{ i }}
                </div>
              </div>
            {% endif %}

            {% if block.settings.show_overlay %}
              <div class="ai-aplus-banner__overlay-{{ ai_gen_id }}"></div>
            {% endif %}

            {% if heading != blank or text != blank or button_text != blank %}
              <div class="ai-aplus-banner__content-{{ ai_gen_id }}">
                {% if heading != blank %}
                  <h3 class="ai-aplus-banner__heading-{{ ai_gen_id }}">{{ heading }}</h3>
                {% endif %}

                {% if text != blank %}
                  <div class="ai-aplus-banner__text-{{ ai_gen_id }}">{{ text }}</div>
                {% endif %}

                {% if button_text != blank and button_link != blank %}
                  <a href="{{ button_link }}" class="ai-aplus-banner__button-{{ ai_gen_id }}">
                    {{ button_text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

