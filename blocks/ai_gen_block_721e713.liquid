{% doc %}
  @prompt
    a video section, can you make the video section display 3 videos side by side, now can you make the size of each video the same as an instagram reel video, great, now can I upload the video directly to my shopify store without needing a youtube url
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
  }

  .ai-video-content-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-video-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
  }

  .ai-video-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
  }

  .ai-video-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-video-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 177.78%;
    background-color: {{ block.settings.video_background }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-video-wrapper-{{ ai_gen_id }} iframe,
  .ai-video-wrapper-{{ ai_gen_id }} video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
    object-fit: cover;
  }

  .ai-video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-video-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-video-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 12px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-item-title-{{ ai_gen_id }} {
    color: {{ block.settings.video_title_color }};
    font-size: {{ block.settings.video_title_size }}px;
    margin: 0;
    text-align: center;
  }

  @media screen and (max-width: 989px) {
    .ai-video-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-video-section-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px {{ block.settings.padding_horizontal | times: 0.6 }}px {{ block.settings.padding_bottom | times: 0.6 }}px;
    }

    .ai-video-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-video-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-video-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-video-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank or block.settings.description != blank %}
    <div class="ai-video-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-video-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.description != blank %}
        <div class="ai-video-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-video-grid-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign video_key = 'video_' | append: i
        assign video_url_key = 'video_url_' | append: i
        assign video_title_key = 'video_title_' | append: i
        assign video = block.settings[video_key]
        assign video_url = block.settings[video_url_key]
        assign video_title = block.settings[video_title_key]
      %}

      <div class="ai-video-item-{{ ai_gen_id }}">
        <div class="ai-video-wrapper-{{ ai_gen_id }}">
          {% if video != blank %}
            {{ video | video_tag: autoplay: block.settings.autoplay, loop: block.settings.autoplay, muted: block.settings.autoplay, controls: true, playsinline: true }}
          {% elsif video_url != blank %}
            {% if video_url contains 'youtube.com' or video_url contains 'youtu.be' %}
              {% assign video_id = video_url | split: 'v=' | last | split: '/' | last | split: '&' | first %}
              <iframe
                src="https://www.youtube.com/embed/{{ video_id }}?rel=0&showinfo=0&modestbranding=1"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
                loading="lazy"
                title="{{ video_title | default: 'Video' }}"
              ></iframe>
            {% elsif video_url contains 'vimeo.com' %}
              {% assign video_id = video_url | split: 'vimeo.com/' | last | split: '/' | first %}
              <iframe
                src="https://player.vimeo.com/video/{{ video_id }}?title=0&byline=0&portrait=0"
                allow="autoplay; fullscreen; picture-in-picture"
                allowfullscreen
                loading="lazy"
                title="{{ video_title | default: 'Video' }}"
              ></iframe>
            {% else %}
              <video
                controls
                playsinline
                {% if block.settings.autoplay %}autoplay muted loop{% endif %}
              >
                <source src="{{ video_url }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            {% endif %}
          {% else %}
            <div class="ai-video-placeholder-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="5 3 19 12 5 21 5 3"></polygon>
              </svg>
              <div class="ai-video-empty-state-{{ ai_gen_id }}">
                Add video {{ i }}
              </div>
            </div>
          {% endif %}
        </div>

        {% if video_title != blank %}
          <h3 class="ai-video-item-title-{{ ai_gen_id }}">{{ video_title }}</h3>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

